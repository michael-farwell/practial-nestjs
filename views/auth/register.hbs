{{#> app}}
  {{#*inline "content"}}
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header">Register</div>

            <div class="card-body">
              <form action="/auth/store"
                    method="post">
                <div class="form-group row">
                  <label for="name"
                         class="col-md-4 col-form-label text-md-right">Name</label>
                  <div class="col-md-6 pb-2">
                    <input id="name"
                           name="name"
                           type="text"
                           class="form-control"
                           required>
                  </div>
                </div>

                <div class="form-group row">
                  <label for="email"
                         class="col-md-4 col-form-label text-md-right">Email</label>
                  <div class="col-md-6 pb-2">
                    <input id="email"
                           name="email"
                           type="email"
                           class="form-control"
                           required>
                  </div>
                </div>

                <div class="form-group row">
                  <label for="password"
                         class="col-md-4 col-form-label text-md-right">Password</label>
                  <div class="col-md-6 pb-2">
                    <input id="password"
                           name="password"
                           type="password"
                           class="form-control"
                           required>
                  </div>
                </div>

                <div class="form-group row mb-0">
                  <div class="col-md-6 offset-md-4">
                    <button class="btn btn-primary text-white"
                            type="submit">
                      Register
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/inline}}
{{/app}}